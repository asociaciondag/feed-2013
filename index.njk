			<section class="invitados" id="participantes">

				{% for val in participantes %}
				<article class="invitado" id="{{ val.id }}">
					{% if loop.index0 % 2 %}
					<blockquote data-bottom-top="transform:translateX(-100px)" data-top-bottom="transform:translateX(100px)">
					{% else %}
					<blockquote data-bottom-top="transform:translateX(100px)" data-top-bottom="transform:translateX(-100px)">
					{% endif %}
						{{ val.cita | md | safe }}
					</blockquote>

					<div>
						<h1>
							{{ val.titulo | safe or val.nome | safe }}
						</h1>

						{{ val.bio | md | safe }}
					</div>

					{% if not loop.last %}
					<a href="#{{ participantes[loop.index].id }}" class="seguinte">&darr;</a>
					{% endif %}
